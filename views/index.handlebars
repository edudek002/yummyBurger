<div class="row">
  <div class="col-md-4">

    <h3>Burgers that are not devoured!</h3>

    <ul>
      {{#each burgers}}
        {{#unless devoured}} 


          <li>
          {{burger_name}}

          <button class="change-dev"
          dev=true
           
          data-id="{{id}}" data-newdev=true>
              EAT
          </button>

          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
          </li>
          
        
        {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="col-md-4">

    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <div class="row">
        <div class="col-md-6">

          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Not devoured!
          </div>
        </div>

        <div class="col-md-6">

          <button type="Submit">Add Burger</button>
        </div>
      </div>
    </form>
  </div>



  <div class="col-md-4">

    <h3>Burgers that are devoured!</h3>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
           
          <li>
          {{burger_name}}

          <button class="change-dev" 

          dev=true
          
          data-id="{{id}}" data-newdev=false>
            GONE
          </button>

          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
          </li>
          
          
        {{/if}}
      {{/each}}  
    </ul>

  </div>
</div>

