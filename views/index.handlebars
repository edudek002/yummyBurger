<div class="row">

  <div class="col-md-4">
    <h3><strong>Burgers ready to eat</strong></h3>
    <br>
    <ul>
      {{#each burgers}}
        {{#unless devoured}} 
          <li>
              <h4>{{id}}. {{burger_name}}</h4>
          
              <button class="change-dev red"     
              data-id="{{id}}" data-newdev=true>
                  ENJOY!
              </button>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md-4 style="text-align:center">
    <h3><strong>Add a Burger</strong></h3>
    <br>

    <form class="create-form">
      <div class="form-group">
        <label for="bu"><h4>Burger Name:</h4></label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <!--
            <label for="devoured">Devoured?</label><br>
            -->
            <input type="radio" name="devoured" value="0"><h4>I want this burger!</h4>
            <input type="radio" name="devoured" value="1" checked><h6>I had this one in the past and didn't like it.</h6>
          </div>
        </div>

        <div class="col-md-6">
          <br>
          <button class="red" type="Submit">ADD BURGER</button>
        </div>
      </div>
    </form>

  </div>



  <div class="col-md-4">
    <h3><strong>Burgers devoured</strong></h3>
    <br>
    <ul>
      {{#each burgers}}
        {{#if devoured}}   
          <li>
            <h4>{{id}}. {{burger_name}}</h4>

            <!--
            <button class="change-dev" 
            dev=true
            data-id="{{id}}" data-newdev=false>
              GONE
            </button>
            -->
            <button class="delete-burger red" data-id="{{this.id}}">DELETE!</button>
          </li>      
        {{/if}}
      {{/each}}  
    </ul>

  </div>
</div>

